{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build judge",
            "type": "shell",
            "windows": {
                "command": "g++",
                "args": [
                    "${workspaceFolder}/wooden_judge.cpp",
                    "-o",
                    "wooden_judge.exe",
                    "-Wall"
                ],
                "group": "build"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build judge (debug) -> GBK",
            "type": "shell",
            "windows": {
                "command": "g++",
                "args": [
                    "${workspaceFolder}/wooden_judge.cpp",
                    "-o",
                    "wooden_judge.exe",
                    "-Wall",
                    "-ggdb",
                    "-g3",
                    "-Ddebug",
                    "-DDEBUG",
                    "-fexec-charset=GBK",
                    "-finput-charset=UTF-8"
                ],
                "group": "build"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build judge (debug) -> UTF-8",
            "type": "shell",
            "windows": {
                "command": "g++",
                "args": [
                    "${workspaceFolder}/wooden_judge.cpp",
                    "-o",
                    "wooden_judge.exe",
                    "-Wall",
                    "-ggdb",
                    "-g3",
                    "-Ddebug",
                    "-DDEBUG",
                ],
                "group": "build"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build & run judge (debug)",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/wooden_judge.exe",
                "args": [

                ],
                "group": "build & run"
            },
            "problemMatcher": [],
            "dependsOn": ["build judge (debug)"]
        },
        {
            "label": "run judge",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/wooden_judge.exe",
                "args": [],
                "group": "run"
            },
            "problemMatcher": []
        }
    ]
}