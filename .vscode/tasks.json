{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build judge",
            "type": "shell",
            "windows": {
                "command": "g++",
                "args": [
                    "${workspaceFolder}/wooden_judge.cpp",
                    "${workspaceFolder}/wooden_test.cpp",
                    "-o",
                    "wooden_game.exe",
                    "-Wall"
                ],
                "group": "build"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build judge (debug) -> GBK",
            "type": "shell",
            "windows": {
                "command": "g++",
                "args": [
                    "${workspaceFolder}/wooden_judge.cpp",
                    "${workspaceFolder}/wooden_test.cpp",
                    "-o",
                    "wooden_game.exe",
                    "-Wall",
                    "-ggdb",
                    "-g3",
                    "-Ddebug",
                    "-DDEBUG",
                    "-fexec-charset=GBK",
                    "-finput-charset=UTF-8"
                ],
                "group": "build"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build judge (debug) -> UTF-8",
            "type": "shell",
            "windows": {
                "command": "g++",
                "args": [
                    "${workspaceFolder}/wooden_judge.cpp",
                    "${workspaceFolder}/wooden_test.cpp",
                    "-o",
                    "wooden_game.exe",
                    "-Wall",
                    "-ggdb",
                    "-g3",
                    "-Ddebug",
                    "-DDEBUG"
                ],
                "group": "build"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build & run judge (debug) -> GBK",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/wooden_game.exe",
                "args": [],
                "group": "build & run"
            },
            "problemMatcher": [],
            "dependsOn": [
                "build judge (debug) -> GBK"
            ]
        },
        {
            "label": "build & run game (debug) -> UTF-8",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/build/wooden_game.exe",
                "args": [],
                "group": "build & run"
            },
            "problemMatcher": [],
            "dependsOn": [
                "build judge (debug) -> UTF-8"
            ]
        },
        {
            "label": "run game",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/build/wooden_game.exe",
                "args": [],
                "group": "run"
            },
            "problemMatcher": []
        },
        {
            "label": "CMake . (GBK On)",
            "type": "shell",
            "windows": {
                "command": "C:/Program Files/CMake/bin/cmake.exe",
                "args": [
                    "${workspaceFolder}/build/",
                    "-DGBK=ON",
                    "-DCMAKE_EXPORT_COMPILE_COMMANDS=1"
                ]
            }
        },
        {
            "label": "CMake . (GBK Off)",
            "type": "shell",
            "windows": {
                "command": "C:/Program Files/CMake/bin/cmake.exe",
                "args": [
                    "${workspaceFolder}/build/",
                    "-DGBK=OFF",
                    "-DCMAKE_EXPORT_COMPILE_COMMANDS=1"
                ]
            }
        },
        {
            "label": "Make (GBK On)",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "windows": {
                "command": "D:/mingw64/bin/make.exe",
                "args": []
            },
            "dependsOn": [
                "CMake . (GBK On)"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Make (GBK Off)",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "windows": {
                "command": "D:/mingw64/bin/make.exe",
                "args": []
            },
            "dependsOn": [
                "CMake . (GBK Off)"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Make & Run (GBK On)",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/build/wooden_game.exe",
                "args": []
            },
            "dependsOn": [
                "Make (GBK On)"
            ],
            "problemMatcher": []
        },
        {
            "label": "Make & Run (GBK Off)",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/build/wooden_game.exe",
                "args": []
            },
            "dependsOn": [
                "Make (GBK Off)"
            ]
        }
    ]
}